<?php
session_start();
if (isset($_POST['quantities']) && is_array($_POST['quantities'])) {

foreach ($_POST['quantities'] as $book_id => $qty) {
        $book_id = (int)$book_id;
        $qty = (int)$qty;
        if ($qty > 0) {
            $_SESSION['cart'][$book_id] = $qty;
        } else {
            unset($_SESSION['cart'][$book_id]);
        }
    }
}


